" Text display
set background=dark
let g:one_allow_italics = 1
colorscheme one
set guioptions=ai
if has('macunix')
    set macligatures
endif
set guifont=Fira\ Code:h14,Monaco:h14
set linespace=2

" For buffer navigation
noremap <D-]> :bn<CR>
noremap <D-[> :bp<CR>
noremap <D-w> :bd<CR>

" vim: set ft=vim:
