" Text display
colorscheme wombat
set guioptions=aeimg
set guifont=Fira\ Code\ Retina:h12,Monaco:h12
set linespace=2

" For 80-character gutter
set colorcolumn=80
highlight ColorColumn guibg=#2D2D2D

" For minibufexpl
noremap <D-]> :MBEbn<CR>
noremap <D-[> :MBEbp<CR>
noremap <D-w> :bc<CR>

" For CtrlP
noremap <D-e> :CtrlP<CR>

" System clipboard integration
set clipboard=unnamed

