" vimrc - vim configuration settings

" -- Variables --
exe 'set runtimepath='.$XDG_CONFIG_HOME.'/vim,/usr/share/vim/vimfiles,'.$VIMRUNTIME.','.$XDG_CONFIG_HOME.'/vim/after'

" -- Functionality --

" Indentation
set autoindent
set smartindent
set preserveindent
set tabstop=4
set shiftwidth=4
set expandtab ts=4 sw=4 ai
filetype indent on
filetype plugin on

" Code folding
set foldcolumn=0
set foldmethod=indent
set foldlevel=100

" Searching
set ignorecase
set smartcase
set hlsearch
set incsearch

" Key mappings
set pastetoggle=<F3>
nmap             <Space>    za
nmap    <silent> /<BS>      :nohlsearch<CR>
vmap    <silent> cc         :w !xsel -i<CR><CR>
nmap    <silent> cc         :.w !xsel -i<CR>
vmap    <silent> cp         :r !xsel<CR>
nmap    <silent> cp         :r !xsel<CR>
noremap          t,         :MBEbp<CR>
noremap          t.         :MBEbn<CR>
cnoremap         <Left>     <Space><BS><Left>
cnoremap         <Right>    <Space><BS><Right>
inoremap         <C-Space>  <C-R>=snipMate#ShowAvailableSnips()<CR>

" Splitting
set splitright
set splitbelow
set diffopt=filler,vertical

" Backup
set nobackup

" Other
set scrolloff=5
set backspace=indent,eol,start
set modeline
set modelines=5

" Window title
if $TERM=='screen'
	exe 'set title titlestring=vim:%t%(\ %m%)'
	exe 'set title t_ts=]2;%t\\'
endif

" Wild menu (tab completion)
set wildmenu
set wildmode=full
set wildchar=<Tab>

" File browser
let g:netrw_browse_split=4  " Open in last window
let g:netrw_liststyle=1     " Long
let g:netrw_sizestyle="H"   " Human-readable, base 1024
let g:netrw_winsize=25      " 25%
let g:netrw_wiw=16          " Minimum width
let g:netrw_hide=1          " Show only non-hidden
let g:netrw_special_syntax=1 "Highlight special files


" For MiniBufExpl
let g:miniBufExplMapCTabSwitchBufs = 1
let g:miniBufExplUseSingleClick = 1
let g:statusLineText = "Buffers"
let g:miniBufExplSplitBelow = 0
let g:miniBufExplForceSyntaxEnable = 1
set hidden

" -- Appearance --

" Text display
if match($TERM,'256')!=-1
    set t_Co=256
    colorscheme wombat256
endif
syntax on
set number
set numberwidth=5
set showmatch
set linebreak
set showbreak=‚Üµ
set list
set listchars=tab:‚á•\ 
set listchars+=trail:‚îÄ
set listchars+=precedes:‚ùÆ
set listchars+=extends:‚ùØ
set listchars+=nbsp:‚Ä•
set listchars+=conceal:‚Åû
set spell
set display=lastline

" Window size
set equalalways
set textwidth=79
set winminwidth=10
set winwidth=80
set nowrap

" Status line
set laststatus=2
set statusline=[%F]%y%([%M%R]%)%=[%c,%l\ of\ %L]
set showcmd
set noruler
set cursorline

" Whole window
set vb t_vb=
